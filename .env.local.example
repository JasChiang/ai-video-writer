# YouTube API (前端使用)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here

# YouTube OAuth (後端使用 - 二選一)
# 方式 1: 使用 Refresh Token (推薦，永久有效)
YOUTUBE_REFRESH_TOKEN=your_refresh_token_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here

# 方式 2: 使用 Access Token (會過期，需定期更新)
# YOUTUBE_TOKEN=your_access_token_here

# YouTube 頻道
YOUTUBE_CHANNEL_ID=UCxxxxxxxxxxxxxxxxxx

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub Gist (用於影片快取)
# - 本地端與伺服器使用 `GITHUB_GIST_*`
# - GitHub Actions Secrets 需使用 `VIDEO_CACHE_GIST_*`，workflow 會映射成下列變數
GITHUB_GIST_TOKEN=your_github_personal_access_token_here
GITHUB_GIST_ID=your_gist_id_here
GITHUB_GIST_FILENAME=youtube-videos-cache.json

# Notion (選填)
# 方式 1: 使用 Internal Integration Token (適合個人使用)
NOTION_API_TOKEN=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here
NOTION_TITLE_PROPERTY=Name

# 方式 2: 使用 OAuth (適合多用戶，需要以下三個變數)
# NOTION_CLIENT_ID=your_notion_oauth_client_id
# NOTION_CLIENT_SECRET=your_notion_oauth_client_secret
# NOTION_REDIRECT_URI=http://localhost:3001/api/notion/callback

# 自訂模板 (選填)
# 用於載入組織專屬的文章生成模板
# CUSTOM_TEMPLATE_URL=https://gist.githubusercontent.com/username/gist_id/raw/custom-templates.json
# CUSTOM_TEMPLATE_TOKEN=your_github_personal_access_token_here

# 前端與伺服器 URL 設定
# 本地開發環境通常使用預設值即可
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001/api
VITE_SERVER_BASE_URL=http://localhost:3001
