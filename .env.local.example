# YouTube API (前端使用)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here

# YouTube OAuth (後端使用 - 二選一)
# 方式 1: 使用 Refresh Token (推薦，永久有效)
YOUTUBE_REFRESH_TOKEN=your_refresh_token_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here

# 方式 2: 使用 Access Token (會過期，需定期更新)
# YOUTUBE_TOKEN=your_access_token_here

# YouTube 頻道
YOUTUBE_CHANNEL_ID=UCxxxxxxxxxxxxxxxxxx

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub Gist (用於影片快取)
GITHUB_GIST_TOKEN=your_github_personal_access_token_here
GITHUB_GIST_ID=your_gist_id_here

# Notion (選填)
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here
